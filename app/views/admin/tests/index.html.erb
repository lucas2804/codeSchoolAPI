<% content_for :content_header do %>
    <section class="content-header">
      <h1>Listing
        <small>admin_tests</small>
      </h1>

      <ol class="breadcrumb">
        <li><a href="/"><i class="fa fa-dashboard"></i> Home</a></li>
        <li class="active">admin_tests</li>
      </ol>
    </section>
<% end %>

<section class="content">
  <div class="row">
    <div class="col-xs-12">
      <div class="box box-primary">
        <div class="box-header">
          <div class="box-tools pull-right">
            <%= link_to new_admin_test_path(@admin_test), :class => 'btn btn-success' do %>
                <span class="glyphicon glyphicon-plus"></span>
                New Test
            <% end %>
          </div>
        </div>
        <div class="box-body table-responsive">
          <table class="table table-hover">
            <thead>
            <tr>
              <th>Name</th>
              <th>Description</th>
              <th></th>
              <th></th>
              <th></th>
            </tr>
            </thead>
            <tbody>
            <%= content_tag_for(:tr, @admin_tests) do |test| %>
                <td><%= link_to test.name, admin_test_path(test) %></td>
                <td><%= test.description %></td>
                <td>
                  <%= link_to edit_admin_test_path(test), class: "btn btn-primary btn-flat" do %>
                      <i class="glyphicon glyphicon-pencil"></i>
                  <% end %>
                  <% admins_only do %>
                      <%= link_to admin_test_path(test), method: :delete, data: {confirm: 'Are you sure?'}, class: "btn btn-danger btn-flat" do %>
                          <i class="glyphicon glyphicon-trash"></i>
                      <% end %>
                  <% end %>

                </td>
            <% end %>

            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
</section>

