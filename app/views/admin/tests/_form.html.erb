<section class="content invoice">
  <div class="row">
    <div class="col-md-10">
      <%= nested_form_for([:admin, @admin_test], :html => {:role => "form"}) do |f| %>
          <% if @admin_test.errors.any? %>
              <div class="alert alert-danger alert-dismissable" role="alert">
                <button type="button" class="close" data-dismiss="alert" aria-hidden="true">x</button>
                <h4><%= pluralize(@admin_test.errors.count, "error") %> prohibited this admin_test from being
                  saved:</h4>

                <ul>
                  <% @admin_test.errors.full_messages.each do |msg| %>
                      <li><%= msg %></li>
                  <% end %>
                </ul>
              </div>
          <% end %>

          <div class="form-group">
            <%= f.label :name %>
            <%= f.text_field :name, :class => "form-control" %>
          </div>
          <div class="form-group">
            <%= f.label :description %>
            <%= f.text_area :description, :class => "form-control" %>
          </div>

          <div class="form-group ff-question">
            <%= f.fields_for :questions do |ff_question| %>
                <h3 class="question">Question</h3>
                <%= render "question_fields", ff_question: ff_question %>
                <hr class="line-question">
            <% end %>
            <%= f.link_to_add  :questions, class: "add-question btn btn-flat bg-blue" do %>
                <i class="glyphicon glyphicon-plus"></i>Add a Question
            <% end %>
          </div>


          <div class="form-group col-md-12">
            <%= f.submit :class => "btn btn-flat bg-olive" %>
          </div>
      <% end %>
    </div>
  </div>
</section> 